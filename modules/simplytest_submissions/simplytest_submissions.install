      ),
      'ip' => array(
        'description' => 'IP address.',
        'type' => 'varchar',
        'length' => 40,
        'not null' => TRUE,
      ),
      'data' => array(
        'description' => 'A serialized array of submission data.',
        'type' => 'blob',
        'not null' => TRUE,
        'size' => 'big',
      ),
      'timestamp' => array(
        'description' => 'Timestamp of the submission.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'state' => array(
        'description' => 'Current submission state.',
        'type' => 'int',
        'not null' => TRUE,
