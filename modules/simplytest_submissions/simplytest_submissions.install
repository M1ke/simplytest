    'description' => 'Stores details about launched submissions.',
    'fields' => array(
      'number' => array(
        'description' => 'Submission number drawed.',
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'id' => array(
        'description' => 'The unique submission id.',
