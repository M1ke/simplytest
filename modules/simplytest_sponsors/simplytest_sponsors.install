<?php

/**
 * @file
 * Update information for the sponsors module.
 */

/**
 * Update sponsors settings array.
 */
function simplytest_sponsors_update_7101() {
  $sponsors = variable_get('simplytest_sponsors', array());
  foreach ($sponsors as $id => &$values) {
    unset($values['delete']);
    $values['active'] = TRUE;
  }
  variable_set('simplytest_sponsors', $sponsors);
}